
<h1>
  <%= @article.title %>
</h1>

<section class="col-sm-8">
 
	<div>
		<%= image_tag @article.image.url(:large), class: "img-thumbnail" %>
	</div>

	<h3>
	  <%= @article.description %>
	</h3>

	<%= link_to 'Edit Article', edit_article_path(@article) %> | <%= link_to 'Delete Article', @article, method: :delete, data: { confirm: 'Are you sure you want to delete this Article?' } %>

</section>

<section class="col-sm-4">

	<%= render 'articles_sidebar' %>

</section>

