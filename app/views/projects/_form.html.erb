<%= form_for(@project, html: { multipart: true } ) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "full-width fat-title" %>
  </div>
  <div class="field">
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions, class: "full-width fat-description" %>
  </div>
  <div class="field">
    <%= f.label :project_type %><br>
    <%= f.text_field :project_type, class: "full-width fat-title" %>
  </div>
  <div class="field">
    <%= f.label :language %><br>
    <%= f.text_field :language, class: "full-width fat-title" %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website, class: "full-width fat-title" %>
  </div>

  <!-- ************** Image Attributes ******************* -->

    <%= f.fields_for :images do |a| %>  

      <div class="form-group">
        <% if a.object.asset %>
          <%= image_tag(a.object.asset.url(:small)) %>
          <br />
          <em>Current image</em><br />
        <% end %>

        <div class="row">
          <div class="col-sm-6">
            <%= a.label :asset, "Upload Project Images" %>
            <%= a.file_field :asset, html: { class: 'form-control' } %>
            <%#= a.label :main_image, "Mark as Main Image" %>
            <%#= a.radio_button :main_image, a.object.id, checked: false %>
          </div>

            <!-- Upload Image via URL -->

            <div class="field col-sm-6">
              <strong>Upload Image via URL:</strong><br />
              <%= text_field_tag 'image_url' %>
            </div>
          </div>
      </div>

    <% end %>

    <p>
      <%= f.submit "Save", class: "btn btn-primary" %>
    </p>

 <!-- <div class="actions">
    <%#= f.submit %>
  </div> -->
<% end %>
