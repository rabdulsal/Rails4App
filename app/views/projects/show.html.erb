<p id="notice"><%= notice %></p>

<%#= render @partial %>

<div>
	<h1><%= @project.name %></h1>

	<div>
		<% @project.images.each do |project_image| %>

		<%= image_tag project_image.asset.url(:large) %>

		<% end %>
	</div>

  	<strong>Description:</strong>
  <p class="lead"><%= @project.instructions %></p>
</div>

<% if @project.article %>

	<h2><%= @project.article.title %></h2>

	<p>
		<%= @project.article.description %>
	</p>

	<p>
		<%= image_tag @project.article.image.url(:medium) %>
	</p>

<% end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
